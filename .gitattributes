# default: self-detect the content type (text vs. binary)
*   text=auto


# an enforced "text" attribute overwrites mixed line-endings in the repo
*.db         binary
*.conf       text
*.css        text
*.dtd        text
*.htm*       text
*.ini        text
*.js*        text
*.md         text
*.php        text
*.phtml      text
*.properties text
*.sh         text
*.sql        text
*.txt        text
*.xml        text
*.yml        text


# checkout with Windows line-endings (not yet supported by EGit)
etc/db/html/*.html text eol=crlf
etc/db/html/*.css  text eol=crlf
*.tpl              text eol=crlf


# Gitgub Linguist overrides
etc/db/html/**     linguist-detectable=false
web/css/**         linguist-detectable=false
web/fonts/**       linguist-detectable=false
web/js/**          linguist-detectable=false
