{
    "name":        "rosasurfer/mt4-php-tools",
    "description": "PHP tools for the MetaTrader MQL framework",
    "type":        "project",
    "license":     "Unlicense",
    "authors": [{
        "name":  "Peter Walther",
        "email": "mt4-php-tools@rosasurfer.com"
    }],
    "config": {
        "platform": {
            "php": "7.4"
        },
        "optimize-autoloader": true
    },
    "require": {
        "php":                   "7.4 - 8",
        "ext-bcmath":            "*",
        "ext-sqlite3":           "*",
        "rosasurfer/ministruts": "^0.11"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "classmap": ["app/"],
        "files":    ["app/functions.php"]
    },
    "scripts": {
        "post-install-cmd": "bash bin/git/check-setup.sh post-checkout post-merge"
    }
}
