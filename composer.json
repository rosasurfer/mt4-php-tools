{
  "name":        "rosasurfer/mt4-php-tools",
  "description": "PHP tools for the MetaTrader MQL framework",
  "type":        "project",
  "license":     "Unlicense",
  "authors": [{
    "name":  "Peter Walther",
    "email": "mt4-php-tools@rosasurfer.com"
  }],
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": false
    }
  },
  "require": {
    "php":                   "^7.4|^8.0",
    "ext-bcmath":            "*",
    "ext-sqlite3":           "*",
    "guzzlehttp/guzzle":     "^7.0",
    "rosasurfer/ministruts": "^0.12@dev"
  },
  "require-dev": {
    "phpstan/phpstan":          "^2.1.20",
    "slevomat/coding-standard": "^8.0"
  },
  "autoload": {
    "classmap": ["app/"],
    "files": [
      "app/functions.php",
      "app/helpers.php"
    ]
  },
  "autoload-dev": {
    "classmap": [
      "etc/phpstan/symbols/",
      "vendor/rosasurfer/ministruts/etc/phpstan/extension/",
      "vendor/rosasurfer/ministruts/etc/phpstan/symbols/"
    ]
  }
}
