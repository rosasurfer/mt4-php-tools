{
    "name":        "rosasurfer/mt4-tools",
    "description": "MT4 web and command line tools",
    "type":        "project",
    "license":     "WTFPL",
    "authors": [{
        "name":  "Peter Walther",
        "email": "mt4-tools@rosasurfer.com"
    }],
    "config": {
        "optimize-autoloader": true
    },
    "repositories": [
        { "type": "vcs", "url": "https://github.com/rosasurfer/ministruts" }
    ],
    "require": {
        "php":                   ">=5.6",
        "ext-bcmath":            "*",
        "ext-sqlite3":           "*",
        "rosasurfer/ministruts": "dev-development"
    },
    "autoload": {
        "classmap": ["app/"],
        "files":    ["app/helpers.php"]
    },
    "scripts": {
        "post-install-cmd": "bash bin/admin/git/check-setup.sh post-checkout post-merge"
    }
}
